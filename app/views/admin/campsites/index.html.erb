<div class="container-fluid">
  <div class="row">
    <div class="area">
      <%# サイドバー %>
      <%= render partial: "layouts/adminsidebar" %>

      <%# メインコンテンツ %>
      <div class="main">
        <div class="main-imagecolor-opacity">
          <h2 class="main-title">Admin index page</h2>
          <div class="card-wrapper justify-content-center">
            <% @campsites.each do |campsite| %>
              <div class="card">
                <%= link_to public_campsite_path(campsite), class: "campsites-top-link" do %>
                  <%= attachment_image_tag campsite, :image, format: 'jpeg', size: "300x200", fallback: "noimage-campsite.png" %>
                  <div class="card-body">
                    <div><%= campsite.name.truncate(15) %></div>
                    <div><%= campsite.address.truncate(20) %></div>
                  </div>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>