<div class="container">
  <div class="row">
    <div class="col-md-6 signup-left">
      <%= link_to root_path, class: "link" do %>
        <div class="signup-left-image"></div>
      <% end %>
    </div>
    <div class="col-md-6 signup-right">
      <h2 class="signup-right-title">Admin Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><span class="asterisk">　*</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required:true, minlength: 1, maxlength: 30, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "password" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上 半角英数字)</em><span class="asterisk">　*</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", required:true, minlength: 6, class: "form-control fontfamily-none" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "password_confirmation" %><span class="asterisk">　*</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required:true, minlength: 6, class: "form-control fontfamily-none" %>
        </div>

        <div class="actions signup-submit-field">
          <%= f.submit "Sign up", class: "signup-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>