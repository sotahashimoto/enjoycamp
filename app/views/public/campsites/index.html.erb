<div class="container-fluid">
  <div class="row">
    <div class="area">
      <%# サイドバー %>
      <%= render partial: "layouts/sidebar" %>

      <%# メインコンテンツ %>
      <div class="main">
        <div class="main-imagecolor-opacity">
          <h2 class="main-title">Campsites</h2>
          <div class="campsites-search-area">
            <%= form_with(url: public_search_path, method: :get, local: true) do |f| %>
              <%= f.text_field :search, placeholder: "キャンプ場または住所で検索", class: "campsites-search-field" %>
              <%= f.submit '検索', class: "campsites-search-btn" %>
            <% end %>
          </div>
          <div class="card-wrapper justify-content-center">
            <% @campsites.each do |campsite| %>
              <div class="card">
                <%= link_to public_campsite_path(campsite), class: "campsites-top-link" do %>
                  <%= attachment_image_tag campsite, :image, format: 'jpeg', size: "300x200", fallback: "noimage-campsite.png", class:"campsites-attachment_image_tag" %>
                  <div class="card-body">
                    <div><%= campsite.name.truncate(15) %></div>
                    <div><%= campsite.address.truncate(20) %></div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="aaa">
          <%= paginate @campsites %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>