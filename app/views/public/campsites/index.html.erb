<% @campsites.each do |campsite| %>
  <%= link_to campsite.name, public_campsite_path(campsite) %>

  <% if user_signed_in? %>
    <% if current_user.already_favorited?(campsite) %>
      <%= link_to public_campsite_favorite_path(campsite, campsite), method: :delete do %>
        いいね外す
      <% end %>
    <% else %>
      <%= link_to public_campsite_favorites_path(campsite), method: :post do %>
        いいね
      <% end %>
    <% end %>
  <% end %>
<% end %>