<div class="container-fluid">
  <div class="row">
    <div class="area">
      <%# サイドバー %>
      <%= render partial: "layouts/sidebar" %>

      <%# メインコンテンツ %>
      <div class="main">
        <div class="main-imagecolor-opacity">
          <h2 class="main-title"><%= @campsite.name %></h2>
          <div class="campsite-content">
            <div class="campsite-image">
              <span class="image-favorite">
                <%= attachment_image_tag @campsite, :image, format: 'jpeg', size: "700x300", fallback: "noprofile_image.jpg", class: "campsite-image-circle" %>
                <span class="image-favorite-content">
                  <%# いいね機能 非同期 %>
                  <span class= <%= "like-" + @campsite.id.to_s %>>
                    <%= render partial: "favorite", locals: { campsite: @campsite } %>
                  </span>
                </span>
              </span>
            </div>
            <div class="campsite-text">
              <table class="campsite-table">
                <tr>
                  <th>名称</th>
                  <td><%= @campsite.name %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td>〒<%= @campsite.postcode.to_s.insert(3, "-") %>　<%= @campsite.address %></td>
                </tr>
              </table>
            </div>
            <div class="link-field"><%= link_to "口コミする!", public_campsite_comment_path(@campsite), class: "link" %></div>
            <div class="link-field"><%= link_to "参加者を募集する!", public_campsite_recruitments_path(@campsite), class: "link" %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>