<div class="container-fluid">
  <div class="row">
    <div class="area">
      <%# サイドバー %>
      <%= render partial: "layouts/sidebar" %>

      <%# メインコンテンツ %>
      <div class="main">
        <div class="main-imagecolor-opacity">
          <div class="main-imagecolor card-wrapper justify-content-center">
            <% @campsites.each do |campsite| %>
              <div class="card">
                <%= link_to public_campsite_path(campsite), class: "campsites-top-link" do %>
                  <%= attachment_image_tag campsite, :image, format: 'jpeg', size: "300x200", fallback: "noimage-campsite.png" %>
                  <div class="card-body">
                    <%= campsite.name.truncate(15) %>
                  </div>
                <% end %>
              </div>
            <% end %>
            <div class="public_campsites_path-field">
              <%= link_to "もっと見る", public_campsites_path(@campsites), class: "campsites-top-link" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
