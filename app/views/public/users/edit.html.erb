<div class="container-fluid">
  <div class="row">
    <div class="area">
      <%# サイドバー %>
      <%= render partial: "layouts/sidebar" %>

      <%# メインコンテンツ %>
      <div class="main">
        <%= form_with model: @user, url: public_user_path, local: true do |f| %>
          <div class="main-imagecolor-opacity">
            <h2 class="main-title">My page</h2>
            <div class="row mypage-content">
              <div class="col-md-6">
                <div class="mypage-left">
                  <%= attachment_image_tag @user, :image, format: 'jpeg', size: "200x200", fallback: "noimage-user.png", class: "image-circle" %>
                  <%= f.attachment_field :image, placeholder: "画像", class: "image-attachment_field" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mypage-right">
                  <table class="mypage-right-table">
                    <tr>
                      <th>名前</th>
                      <td><%= f.text_field :name, class: "form-control", required:true , minlength: 1, maxlength: 15 %></td>
                    </tr>
                    <tr>
                      <th>Email</th>
                      <td><%= f.text_field :email, class: "form-control", required:true , minlength: 1, maxlength: 30 %></td>
                    </tr>
                    <tr>
                      <th>よく行くキャンプ場</th>
                      <td><%= f.text_field :favorite_place, class: "form-control", maxlength: 17 %></td>
                    </tr>
                    <tr>
                      <th>自己紹介</th>
                      <td><%= f.text_area :introduction, class: "form-control introduction-text_area", maxlength: 100 %></td>
                    </tr>
                  </table>
                  <div class="user-edit-submit">
                    <%= f.submit "更新", class: "user-edit-submit-btn" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>