<div class="container">
  <div class="row">
    <div class="col-md-6 signup-left">
      <div class="signup-left-image">
        <%= link_to root_path, class: "link" do %>
          <h2 class="signup-left-title">Enjoy CAMP!</h2>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 signup-right">
      <h2 class="signup-right-title">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><span class="asterisk">　*</span><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %><span class="asterisk">　*</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "password" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上 半角英数字)</em><span class="asterisk">　*</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control fontfamily-none" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "password_confirmation" %><span class="asterisk">　*</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control fontfamily-none" %>
        </div>

        <div class="actions signup-submit-field">
          <%= f.submit "Sign up", class: "signup-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>